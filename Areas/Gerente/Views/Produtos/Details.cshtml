@model WebAppPedido.Areas.Gerente.Models.Produto

@{
    ViewData["Title"] = "Detalhes de Produto";
}
<div>
    <p>
        <h4>Produto</h4>
    </p>
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.UsuarioAlteracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioAlteracao)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.DataAlteracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAlteracao)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.UsuarioCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioCriacao)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.RegistroAtivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistroAtivo)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editarItem">Editar</a>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>

<!-- Modal -->
<div class="modal fade" id="editarItem" tabindex="-1" aria-labelledby="mEditarItem" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <p>
                    <h5 class="modal-title" id="mEditarItem">Editar Item</h5>
                </p>
            </div>
            <form asp-action="Edit">
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProdutoId" />
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Valor" class="control-label"></label>
                        <input asp-for="Valor" class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantidade" class="control-label"></label>
                        <input asp-for="Quantidade" class="form-control" />
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RegistroAtivo" /> @Html.DisplayNameFor(model => model.RegistroAtivo)
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input data-bs-dismiss="modal" value="Fechar" class="btn btn-primary" />
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
